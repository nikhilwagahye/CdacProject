<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="133.33dp"
    android:background="@drawable/nav_probg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewHANUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewHANEmailId"
        android:layout_marginLeft="20dp"
        android:ellipsize="end"
        android:gravity="left"
        android:text="Nikhil W"
        android:textColor="@color/white"
        android:textSize="20sp"

        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewHANEmailId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="20dp"
        android:ellipsize="end"
        android:text="nik@gmail.com"
        android:textColor="@color/white"
        android:textSize="14sp" />

</RelativeLayout>